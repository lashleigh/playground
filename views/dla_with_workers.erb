function neighbors_classic(sim, x, y) {
  var neigh = []
  var grid = sim.grid;
  neigh.push(neigh_hash(x-1, y))
  neigh.push(neigh_hash(x+1, y))
  neigh.push(neigh_hash(x, y-1))
  neigh.push(neigh_hash(x, y+1))
  if(sim.GRID_STYLE=="classic8") {
    neigh.push([x+1,y-1,grid[x+1][y-1]])
    neigh.push([x+1,y+1,grid[x+1][y+1]])
    neigh.push([x-1,y-1,grid[x-1][y-1]])
    neigh.push([x-1,y+1,grid[x-1][y+1]])
  }
  function neigh_hash(x, y) {
    return {'x':x, 'y':y, 'z':grid[x][y]}
  }
  return neigh;
}
</script>
